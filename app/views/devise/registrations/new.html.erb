<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :name, class: 'col-md-2 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: 'col-md-2 control-label' %>
        <div class="col-md-5">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: 'col-md-2 control-label' %>
        <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: 'col-md-2 control-label' %>
        <div class="col-md-5">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :bio, 'Short bio', class: 'col-md-2 control-label' %>
        <div class="col-md-5">
          <%= f.text_area :bio, rows: 6, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-5 col-md-offset-2">
          <%= f.submit "Sign up", class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>