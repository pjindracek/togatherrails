<%= form_for(@group) do |f| %>
    <% if @group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

          <ul>
            <% @group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :motto %>
      <br>
      <%= f.text_area :motto %>
    </div>
    <div>
      <%= f.label :category %><br/>
      <%= f.select :category, options_for_select(@categories.collect {|c| [ c[:label], c[:symbol] ] }, selected: f.object.category) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
